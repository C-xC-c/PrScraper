{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "File": {
            "Path": "/path/to/logfile",
            "Append": "True",
            "FileSizeLimitBytes": 1048576, // 1MB
            "MaxRollingFiles": 2
        }
    },
    "Config": {
        "FilePath": "/path/to/file.json"
    }
}
